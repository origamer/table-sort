<p id="notice"><%= notice %></p>

<h1>Сортировка таблицы</h1>

<table id="grid" align="center">
  <thead>
    <tr>
      <th data-type="string">Alphabetic</th>
      <th data-type="number">Numeric</th>
      <th data-type="">Date</th>
      <th data-type="">Unsortable</th>
    </tr>
  </thead>

  <tbody>
    <% @signs.each do |sign| %>
      <tr>
        <td><%= sign.alphabetic %></td>
        <td><%= sign.numeric %></td>
        <td><%= sign.date %></td>
        <td><%= sign.unsortable %></td>
        <!-- <td><%= link_to 'Просмотр', sign %></td>
        <td><%= link_to 'Изменить', edit_sign_path(sign) %></td>
        <td><%= link_to 'Удалить', sign, method: :delete, data: { confirm: 'Вы уверены?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

